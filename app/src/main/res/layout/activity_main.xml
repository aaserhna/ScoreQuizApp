                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                android:layout_marginTop="6dp"
                android:lineSpacingExtra="8dp"
                android:text="@string/q_one_text"
                android:textColor="@color/myBlack"
                android:textSize="18sp" />

            <RadioGroup
                android:id="@+id/q1_radiogroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:checkedButton="@string/null_select">

                <RadioButton
                    android:id="@+id/q1_radiobutton0"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/q_one_option1"
                    android:textSize="16sp" />

                <RadioButton
                    android:id="@+id/q1_radiobutton1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/q_one_option2"
                    android:textSize="16sp" />

                <RadioButton
                    android:id="@+id/q1_radiobutton2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/q_one_option3"
                    android:textSize="16sp" />
            </RadioGroup>
        </LinearLayout>

        <View
